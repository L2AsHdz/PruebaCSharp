@page
@model EmpleadosApp.Pages.Puestos.EditModel
@{
}

<br />
<h2>Editar puesto</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <input type="hidden" name="id" value="@Model.puesto.Id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nombre</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nombre" value="@Model.puesto.Nombre" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Descripcion</label>
        <div class="col-sm-6">
            <textarea class="form-control" rows="5" name="desc">@Model.puesto.Descripcion</textarea>
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Puestos/Index" role="button">Cancelar</a>
        </div>
    </div>
</form>